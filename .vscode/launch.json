  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "debug webpack",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "node",
      // "runtimeArgs": ["--config", "webpack.config.js", "--stats", "verbose"],
      "program": "${workspaceFolder}\\node_modules\\webpack\\bin\\webpack.js",
      "args": ["--config", "webpack.config.js", "--stats", "verbose"]
    }
  ]
}
